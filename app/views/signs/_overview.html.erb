<div class="grid-x grid-margin-x margin-bottom-1">
  <div id="sign_overview" class="callout cell small-12 large-10 grid-x">
    <div class="cell auto">
      <h3> Hey <%= current_user.username %>, you are the creator of this sign</h3>
      <div class="grid-x margin-bottom-0">
        <h6 class="cell shrink subheader margin-top-0">It is</h6>
        <h6 id="sign_status" title="<%= @sign.status_description %> <%= @sign.edit_status_instructions %>" class="royal cell shrink margin-bottom-0 margin-left-1"> <%= @sign.status_name %> </h6>
      </div>
    </div>
    <% if policy(@sign).edit? && @sign.status == 'personal' %>
      <div class="cell small-2">
        <%= link_to edit_sign_path(@sign), class: "button clear" do %>
          <%= inline_svg "media/images/edit.svg", aria_hidden: true, class: "icon icon--royal" %>
          Edit
        <% end %>
      </div>
    <% elsif policy(@sign).destroy? %>
      <div class="cell small-6">
        <a href="#" class="list__item__icon--options" data-toggle="sign_options" title="Sign Options">
          <%= inline_svg "media/images/options.svg", class: "icon icon--royal icon--mid list__item__icon" %>
        </a>
        <div class="list__item-menu__dropdown-pane" id="sign_options" data-position="bottom" data-alignment="right" data-dropdown data-hover="true" data-hover-pane="true">
          <ul class="list__item-menu vertical icons">
            <% if policy(@sign).edit?%>
              <li class="list__item-menu__menu-item">
                <%= link_to edit_sign_path(@sign) do %>
                  <%= inline_svg "media/images/edit.svg", aria_hidden: true, class: "icon--medium-gray" %>
                  <span>Edit</span>
                <% end %>
              </li>
            <% end %>
            <% if policy(@sign).edit?%>
              <li class="list__item-menu__menu-item">
                <%= link_to sign_path(sign), method: :delete, data: { confirm: t("signs.cancel_publish_request") } do %>
                  <%= inline_svg "media/images/disagree.svg", class: "icon--medium-gray" %>
                  <span>Cancel publication request</span>
                <% end %>
              </li>
            <% end %>
            <% unless policy(@sign).edit? %>
              <li class="list__item-menu__menu-item">
                <%= link_to sign_request_unpublish_path(sign), method: :post, data: { confirm: t("signs.request_unpublish.confirm") } do %>
                  <%= inline_svg "media/images/private.svg", class: "icon--medium-gray" %>
                  <span>Request to be private</span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
