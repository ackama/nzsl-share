<%= turbo_frame_tag sign.dom_id(:votes), class: "sign-card__votes", data: { autoscroll: true } do %>
  <%= agree_button(sign) do %>
    <%= inline_svg_pack_tag "media/images/agree.svg", aria: true, title: "Agree", class: "sign-card__votes--icon" %>
    <%= sign.agree_count %>
  <% end %>

  <%= disagree_button(sign) do %>
    <%= inline_svg_pack_tag "media/images/disagree.svg", aria: true, title: "Disagree", class: "sign-card__votes--icon" %>
    <%= sign.disagree_count %>
  <% end %>
<% end %>
