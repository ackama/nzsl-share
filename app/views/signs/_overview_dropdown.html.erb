<div class="cell small-1">
  <a href="#" class="list__item__icon--options" data-toggle="sign_options" title="Sign Options">
    <%= inline_svg "media/images/options.svg", class: "icon icon--royal icon--mid list__item__icon" %>
  </a>
  <div class="list__item-menu__dropdown-pane" id="sign_options" data-position="bottom" data-alignment="right" data-dropdown data-hover="true" data-hover-pane="true">
    <ul class="list__item-menu vertical icons">
      <% if policy(@sign).edit?%>
        <li class="list__item-menu__menu-item">
          <%= link_to edit_sign_path(@sign) do %>
            <%= inline_svg "media/images/edit.svg", title: "Edit", aria_hidden: true, class: "icon--medium" %>
            <span>Edit</span>
          <% end %>
        </li>
        <li class="list__item-menu__menu-item">
          <%= link_to sign_publish_path(sign), method: :delete, data: { confirm: t("sign_publish.destroy.confirm") } do %>
            <%= inline_svg "media/images/disagree.svg", title: "Cancel", class: "icon--medium" %>
            <span>Cancel (donâ€™t show to public)</span>
          <% end %>
        </li>
      <% else %>
        <% if @sign.status == 'published'%>
          <li class="list__item-menu__menu-item">
            <%= link_to sign_request_publish_path(sign), method: :delete, data: { confirm: t("sign_request_publish.destroy.confirm") } do %>
              <%= inline_svg "media/images/private.svg", title: "Private", class: "icon--medium" %>
              <span>Ask to be private</span>
            <% end %>
          </li>
        <% else %>
          <li class="list__item-menu__menu-item">
            <%= link_to  sign_publish_path(sign), method: :post, data: { confirm: t("sign_publish.create.confirm") } do %>
              <%= inline_svg "media/images/eye.svg", title: "Public", class: "icon--medium" %>
              <span>Keep sign public</span>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
