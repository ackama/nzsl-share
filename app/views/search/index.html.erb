<br>
<div class="grid-x grid-margin-x">
  <div class="cell small-9">
    <h4><%= "#{@page[:total]} Result(s) for '#{@page[:word]}'" %></h4>
  </div>
  <% if @signs.any? %>
    <div class="cell auto">
      <%= render "sort_by", page: @page %>
    </div>
    <br>
    <% @signs.each_with_index do |sign, idx| %>
      <div class="cell small-3">
        <% if anchor_here?(idx, @page) %>
          <a id="current_location"><%= render "signs/card", sign: sign %></a>
        <% else %>
          <%= render "signs/card", sign: sign %>
        <% end %>
      </div>
    <% end %>

    <% unless total_reached?(@page) %>
      <div class="cell auto">
        <%=
          button_to "Show More",
          search_index_path(anchor: "current_location"),
          method: :get,
          params: show_more_params(@page),
          class: "button primary"
        %>
      </div>
    <% end %>
  <% end %>
</div>
