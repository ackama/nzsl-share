<div class="grid-x grid-margin-x margin-2">
  <div class="cell small-8">
    <h2 class="normal">
      <%= pluralize(@page[:total], "result") %>
      for
      <strong>‘<%= @page[:term] %>’</strong>
    </h2>
  </div>

  <div class="cell auto">
    <%= render "sort_by", page: @page if @signs.any? %>
  </div>
</div>

<div class="grid-x grid-margin-x">
  <hr class=" cell auto">
</div>

<div class="cell auto grid-x sign-grid">
  <% @signs.each do |sign| %>
    <%= render "signs/card", sign: sign %>
  <% end %>
</div>

 <% unless @signs.any? && @page[:total] <= @page[:limit] %>
  <div class="cell auto">
    <%=
      button_to "Show More",
      search_index_path,
      method: :get,
      params: show_more_params(@page),
      class: "button primary",
      form_class: "text-center margin-2"
    %>
  </div>
<% end %>
