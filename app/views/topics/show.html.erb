<div class="grid-x grid-margin-x">
  <nav class="cell" aria-label="You are here:" role="navigation">
    <ul class="breadcrumbs">
      <li><a href="/">Home</a></li>
      <li><%= link_to "Topics", topics_path %></li>
      <li>
        <span class="show-for-sr">Current: </span> <%= @topic.name %>
      </li>
    </ul>
  </nav>

  <div class="grid-x cell">
    <h1><%= @topic.name %></h1>
    <div class="grid-x grid-margin-x cell">
      <% @topic.signs.for_cards.each do |sign| %>
        <div class="cell shrink"><%= render "signs/card", sign: sign %></div>
      <% end %>
    </div>
  </div>
</div>
