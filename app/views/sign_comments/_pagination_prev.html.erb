<%= turbo_frame_tag(dom_id(@sign, :comments_pagination), class: "sign-comments-pagination--older show text-center") do %>
  <%= link_to sign_path(@sign, comments_in_folder: params[:comments_in_folder],
              anchor: "sign-comments",
              comments_page: @comments.next_page),
              data: { turbo_stream: true }, # Allow show.turbo_stream.erb to update the comments list
              class: "button clear" do %>
    <%= inline_svg_pack_tag "media/images/dropdown.svg", class: "vertical-flip margin-right-1" %>
    Show older comments
  <% end %>
<% end if !@comments.last_page? && @comments.any? %>
