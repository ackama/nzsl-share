<%= form_with(model: SignComment.new, url: sign_comments_path(@sign), method: :post) do |f| %>
  <div class="grid-x grid-padding-x">
    <div class="cell shrink"></div>
    <div class="cell auto sign-comment__text-area">
      <%= f.text_area :comment, placeholder: "Write your text comment", class: "sign-comment__text-area--text" %>
      <%= f.hidden_field :parent_id, value: comment&.id %>
      <%= f.hidden_field :folder_id, value: "" %>
    </div>
    <div class="cell">
      <%= render "sign_comments/shared/anonymous", form: f %>
    </div>
  </div>
<% end %>
