<div class="cell shrink">
  <% if comment.anonymous? %>
    <%= link_to "#" do %>
      <% inline_svg("media/images/avatar.svg", title: "Avatar", aria: true, class: "avatar avatar--small") %>
    <% end %>
  <% else %>
    <%= link_to user_path(comment.user.username) do %>
      <%= comment.user_avatar %>
    <% end %>
  <% end %>
</div>

<div class="cell auto sign-comments__comment">
  <span class="cell auto">
    <%= link_to user_path(comment.user.username), class: "sign-comments__comment__username--link" do %>
      <%= comment.username %>
    <% end unless comment.anonymous %>
  </span>
  <% if comment&.video.attached? %>
    <span class="cell auto">
      <%= comment.video_description %>
    </span>
    <span class="cell auto video-wrapper data-overlay">
      <%= video_tag url_for(comment.video), size: "320x240", controls: true %>
    </span>
  <% else %>
    <span class="cell auto">
      <%= comment.user_comment %>
    </span>
  <% end %>
</div>

<div class="cell shrink">
  <%= render "sign_comments/shared/options", comment: comment %>
</div>
