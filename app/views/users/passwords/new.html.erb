<div class="cell small-12 medium-8 medium-offset-2 large-6 large-offset-3 margin-top-2">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form", method: :post }) do |f| %>
  <legend><h2>Forgot your password?</h2></legend>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <%= f.error :email %>
  </div>

  <div class="actions margin-top-1">
    <%= f.submit "Send me reset password instructions", class: "button" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
