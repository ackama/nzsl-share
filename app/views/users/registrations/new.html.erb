<% provide(:title, "Sign up") %>

<div class="cell medium-8 medium-offset-2 margin-top-2">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
    <legend class="form__header margin-0"><h1 class="black">Sign up</h1></legend>

    <hr class="form__divider">

    <fieldset class="form__section">
      <legend><h2 class="primary">My details</h2></legend>
      <hr class="form__divider">

      <%= f.label :username, class: "required" %>
      <%= f.text_field :username,pattern: User::USERNAME_REGEXP %>
      <%= f.error :username %>

      <%= f.label :email, class: "required" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      <%= f.error :email %>

      <%= f.label :bio %>
      <%= f.text_area :bio, rows: 5, placeholder: "Tell us a little about yourself! This will be visible to others.", maxlength: "250", data: {characters: ""} %>
      <p class="help-text text-right"><span data-character-count="user_bio">0</span>/250 characters</p>

      <legend><h2 class="primary">Password</h2></legend>
      <hr class="form__divider">

      <%= f.label :password, class: "required" %>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <%= f.error :password %>
      <% if @minimum_password_length %>
        <div class="text-right">
          <span class="help-text">(<%= @minimum_password_length %> characters minimum)</span>
        </div>
      <% end %><br />

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      <%= f.error :password_confirmation %>
    </fieldset>

    <hr class="form__divider">

    <div class="form__footer">
      <%= f.submit "Sign up", class: "button" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>
