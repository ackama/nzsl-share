<% provide(:title, t("devise.invitations.edit.header")) %>

<div class="cell medium-8 medium-offset-2 margin-top-2">
  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: "form margin-bottom-0" }) do |f| %>
  <legend class="form__header margin-0"><h1 class="black"><%= t "devise.invitations.edit.header" %></h1></legend>
  <hr class="form__divider">

  <%= f.hidden_field :invitation_token, readonly: true %>

  <% if f.object.class.require_password_on_accepting %>
  <fieldset class="form__section">
    <%= f.label :password %> <%= f.password_field :password, autocomplete:
    "new-password" %>
    <%= f.label :password_confirmation %> <%= f.password_field :password_confirmation, autocomplete:
    "new-password" %>
  </fieldset>
  <% end %>

  <hr class="form__divider">

  <div class="form__footer">
    <%= f.submit t("devise.invitations.edit.submit_button"), class: "button" %>
  </div>
  <% end %>
</div>

