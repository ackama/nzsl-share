<div class="grid-x grid-margin-x">
  <div class="cell small-12 large-4">
    <div class="grid-x">
      <div class="cell small-6 callout callout primary">
        <div style="min-height:200px"></div>
      </div>
      <div class="cell small-6 callout callout accent"></div>
      <div class="cell small-6 callout callout secondary"></div>
      <div class="cell small-6 callout callout light">
        <div style="min-height:200px"></div>
      </div>

    <div class="callout callout accent large">
      <h1>
        Dark orange with white text will pass AA contrast checks with min 24px
        text.
      </h1>
      <hr />

      <a class="expanded button callout__action">
        <i class="fa fa-2x fas fa-plus-circle"></i>
        Upload a term
      </a>

      <a class="expanded button callout__action">
        <i class="fa fa-2x fas fa-facebook-square"></i>
        Share on Facebook
      </a>
    </div>
    </div>
  </div>

  <div class="cell small-12 large-4">
    <div class="callout callout secondary radius large">
      <h1>Finibus urna condimentum</h1>
