<header class="header">
  <div class="header__bar">
    <div class="header__bar--left">
      <button class="navigation__button navigation__button--toggle" type="button" data-toggle="main-menu" aria-label="Open menu"></button>
    </div>
    <div class="header__bar--left">
      <span class="header__bar-title">
        <%= image_pack_tag "logo.svg", alt: "NZSL Share" %>
      </span>
    </div>

    <div class="header__bar--right">
      <img class="avatar avatar--small" src="https://picsum.photos/id/550/32/32" alt="Profile Image" />
    </div>
  </div>

  <div class="header__bar">
    <input
      type="search"
      class="rounded navigation__input navigation__input--search"
      placeholder="Search signs"
    />
  </div>

  <%= render "application/header/navigation" %>
</header>
