<header class="header">
  <div class="header__bar">
    <% if user_signed_in? %>
      <div class="header__bar--left">
        <button class="navigation__button navigation__button--toggle" type="button" data-toggle="authenticated-sidebar" aria-label="Open menu"></button>
      </div>
    <% end %>

    <div class="header__bar--left">
      <span class="header__bar-title">
        <%= image_pack_tag "logo.svg", alt: "NZSL Share" %>
      </span>
    </div>

    <div class="header__bar--right">
      <% if user_signed_in? %>
        <% if current_user.avatar.attached? %>
          <%= image_tag current_user.avatar.variant(resize_to_fill: [64, 64]), class: "avatar avatar--small" %>
        <% else %>
        <img class="avatar avatar--small" src="https://picsum.photos/id/550/32/32" alt="Profile Image" />
        <% end %>
      <% else %>
        <ul class="navigation__list">
          <li class="navigation__item"><%= link_to "Sign in", new_user_session_path %></li>
        </ul>
      <% end %>
    </div>
  </div>

  <div class="header__bar">
    <%= render "application/header/search" %>
  </div>

  <%= render "application/header/navigation" %>
</header>
