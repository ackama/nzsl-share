<% provide(:title, "Home") %>
<div class="grid-x home-main">
  <div class="home-main__container cell small-6 medium-3">
    <div class="home-main__icon">
      <%= inline_svg_pack_tag "media/images/home/folder.svg", aria_hidden: true %>
      <%= inline_svg_pack_tag "media/images/home/rectangle.svg", aria_hidden: true, class: "home-main__icon-shadow" %>
    </div>
    <h6>Save favourites</h6>
    <p>Create folders and save your favourite signs</p>
    <%= link_to "Join NZSL Share", new_user_registration_path %>
  </div>

  <div class="home-main__container cell small-6 medium-3">
    <div class="home-main__icon">
      <%= inline_svg_pack_tag "media/images/home/camera-2.svg", aria_hidden: true %>
      <%= inline_svg_pack_tag "media/images/home/rectangle.svg", aria_hidden: true, class: "home-main__icon-shadow" %>
    </div>
    <h6>Upload signs</h6>
    <p>Upload your recorded signs, keep them in your private folder and share links with others</p>
  </div>

  <div class="home-main__container cell small-6 medium-3">
    <div class="home-main__icon">
      <%= inline_svg_pack_tag "media/images/home/conversation-check.svg", aria_hidden: true %>
      <%= inline_svg_pack_tag "media/images/home/rectangle.svg", aria_hidden: true, class: "home-main__icon-shadow" %>
    </div>
    <h6>Discuss signs</h6>
    <p>Approved members comment on signs, agree or disagree</p>
    <%= link_to "Learn more", edit_user_registration_path(anchor: "approved-member-information") %>
  </div>

  <div class="home-main__container cell small-6 medium-3">
    <div class="home-main__icon">
      <%= inline_svg_pack_tag "media/images/home/upload.svg", aria_hidden: true %>
      <%= inline_svg_pack_tag "media/images/home/rectangle.svg", aria_hidden: true, class: "home-main__icon-shadow" %>
    </div>
    <h6>Post public signs</h6>
    <p>Approved member can add new signs for everyone to see</p>
  </div>

  <div id="recently-published" class="cell margin-top-1 home-main__signs">
    <div class="grid-x">
      <div class="cell auto">
        <h2>Recently Added</h2>
      </div>
      <div class="cell shrink">
        <%= link_to "See all", public_signs_path, class: "button primary" %>
      </div>
    </div>
    <div class="sign-grid sign-grid--not-bottom">
      <%= render partial: "signs/card", collection: @recent_signs, as: :sign %>
    </div>
  </div>

  <div class="cell margin-top-1 home-main__signs">
    <h2>Most viewed</h2>
    <div class="sign-grid">
      <%= render partial: "signs/card", collection: @viewed_signs, as: :sign %>
    </div>
  </div>
</div>
